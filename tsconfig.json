{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "paths": {
      "@steroidsjs/core/*": [
        "../react/src/*"
      ],
    },
    "lib": [
      "DOM",
      "ES2016"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@steroidsjs/core/*": [
        "../react/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../react/src/index.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/list/Accordion/*",
    "src/list/Detail/*",
    "src/form/HtmlField/*",
    "src/format/PhotosFormatter/*"
  ]
}
